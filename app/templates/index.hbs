<h1> Welcome to Super Rentals </h1>

<p>We hope you find exactly what you're looking for in a place to stay.</p>
<div class="container">
  <div class="row">
    <div class="col-md-8">
      <ul>
        {{#each model.rentals as |rental|}}
           {{rental-tile rental=rental destroyRental="destroyRental"}}
        {{/each}}
      </ul>

      {{new-rental save2="save3"}}
    </div>

    <div class="col-md-4">
      <h4>Announcements:</h4>
      <ul>
        {{#each model.announcements as |announcement|}}
          <li>
            <p>Message: {{announcement.message}}</p>
            <p>By {{announcement.author}} on {{announcement.date}}</p>
            <hr>
          </li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
{{#link-to 'about'}}About{{/link-to}}
{{#link-to 'contact'}}Click here to contact us.{{/link-to}}
